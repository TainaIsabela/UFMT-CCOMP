numlin = 5
numcol = 3


def criarmatrizes(numlin, numcol):
    matriz = []

    for i in range(numlin):
        linha = []

        for j in range(numcol):
            linha.append(int(input()))

        matriz.append(linha)

    print(matriz.copy())


print("Matriz A:")
A = criarmatrizes(numlin, numcol)
print("Matriz B:")
B = criarmatrizes(numlin, numcol)

matriz_soma = []
quant_linhas = 5
quant_colunas = 3
for i in range(quant_linhas):
    matriz_soma.append([])
    for j in range(quant_colunas):
        soma = A[i][j] + B[i][j]
        matriz_soma[i].append(soma)
        print(matriz_soma.copy())
        
